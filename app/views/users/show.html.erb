<h2>スケジュール詳細</h2>

<table>
 <tr>
  <th>タイトル</th>
  <td><%= @user.title %></td>
 </tr>

 <tr>
  <th>開始日</th>
  <td><%= @user.startday %></td>
 </tr>

 <tr>
  <th>終了日</th>
  <td><%= @user.endday %></td>
 </tr>

 <tr>
  <th>終日</th>
  <td><% if @user.allday == true %>
    ◯
    <% else %>
    
    <% end %>
    </td>
 </tr>

 <tr>
  <th>スケジュールメモ</th>
  <td><%= @user.memo %></td>
 </tr>
</table>

<div>
 <ul>
  <li><%= link_to "スケジュール一覧に戻る", :users %></li>
 </ul>
</div>